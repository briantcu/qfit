<h1>Listing laps</h1>

<table>
  <thead>
    <tr>
      <th>Lap number</th>
      <th>Performed sprint</th>
      <th>Completed</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @laps.each do |lap| %>
      <tr>
        <td><%= lap.lap_number %></td>
        <td><%= lap.performed_sprint_id %></td>
        <td><%= lap.completed %></td>
        <td><%= link_to 'Show', lap %></td>
        <td><%= link_to 'Edit', edit_lap_path(lap) %></td>
        <td><%= link_to 'Destroy', lap, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

