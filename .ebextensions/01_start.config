files:
  /opt/elasticbeanstalk/hooks/appdeploy/post/02_start_app.sh:
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      cd /var/app/current
      sudo chmod -R 777 log
      sudo mkdir -p tmp/pids
      sudo chmod 777 tmp/pids
      god -c config/god/sidekiq_god_prod.rb -D 2>&1 >/dev/null
      god restart sidekiq

